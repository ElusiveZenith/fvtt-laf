<form autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Name">
      </h1>
      <div class="resource">
        <label>{{localize "SIMPLE.Quantity"}}</label>
        <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number">
      </div>
      <div class="resource">
        <label>{{localize "SIMPLE.Weight"}}</label>
        <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="Number">
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SIMPLE.Description"}}</a>
    <a class="item" data-tab="attributes">{{localize "SIMPLE.Attributes"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor enrichedDescription target="system.description" button=true owner=owner editable=editable engine="prosemirror"}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      <header class="attributes-header flexrow">
        <span class="attribute-key">{{localize "SIMPLE.AttributeKey"}}</span>
        <span class="attribute-value">{{localize "SIMPLE.Value"}}</span>
        <span class="attribute-label">{{localize "SIMPLE.Label"}}</span>
        <span class="attribute-dtype">{{localize "SIMPLE.DataType"}}</span>
        <a class="attribute-control" data-action="create"><i class="fas fa-plus"></i></a>
      </header>

      {{!-- Render the attribute list partial. --}}
      {{> "systems/laf/templates/item-sheet-attributes.hbs" attributes=attributes dtypes=dtypes}}
    </div>
  </section>
</form>
